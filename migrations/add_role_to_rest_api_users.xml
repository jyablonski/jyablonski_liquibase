<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add-column-role-to-rest_api_users" author="jyablonski">
        <!-- Preconditions to check if the column does not exist -->
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists schemaName="marts" tableName="rest_api_users" columnName="role"/>
            </not>
        </preConditions>

        <!-- Add the new column -->
        <addColumn schemaName="marts" tableName="rest_api_users">
            <column name="role" type="VARCHAR(255)" defaultValue="Consumer">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Rollback to drop the column if it was added -->
        <rollback>
            <dropColumn schemaName="marts" tableName="rest_api_users" columnName="role"/>
        </rollback>
    </changeSet>

</databaseChangeLog>