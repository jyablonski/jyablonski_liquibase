<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add-index-to-rest_api_users" author="jyablonski">
        <preConditions onFail="MARK_RAN">
        <not>
            <indexExists schemaName="nba_prod" tableName="rest_api_users" indexName="username_rest_api_users_index"
                         columnNames="username"/>
        </not>
        </preConditions>

        <createIndex clustered="false" schemaName="nba_prod" tableName="rest_api_users" indexName="username_rest_api_users_index">
            <column descending="false" name="username"/>
        </createIndex>

        <rollback>
            <dropIndex schemaName="nba_prod" tableName="rest_api_users" indexName="username_rest_api_users_index"/>
        </rollback>
    </changeSet>

</databaseChangeLog>